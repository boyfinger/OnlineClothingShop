@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
    var statusCode = ViewData["StatusCode"] ?? 500;
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4" style="max-width: 600px; margin: auto; border-radius: 15px;">
        <div class="card-body">
            <h1 class="text-danger display-3"><i class="bi bi-exclamation-triangle-fill"></i></h1>
            <h2 class="text-danger">Lỗi @statusCode</h2>
            <p class="lead">@ViewData["ErrorMessage"]</p>

            <a href="/" class="btn btn-primary mt-3"><i class="bi bi-house-door"></i> Quay lại trang chủ</a>
        </div>
    </div>
</div>

