<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Online Clothing Shop</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/templatemo-lugx-gaming.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/common.css">
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/Home" class="logo" style="color: #fff3b0; font-size: 20px; font-weight: bold; width: 300px; margin-top: 10px;">
                            Online Clothing Shop
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="/Home" id="home-link" class="active">Home</a></li>
                            <li><a href="/product" id="shop-link">Our Shop</a></li>
                            <li><a href="#">Product Details</a></li>
                            <li><a href="/contact.html">Contact Us</a></li>
                            <li><a href="/Account/Login">Sign In</a></li>
                        </ul>

                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="main-banner">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody() <!-- This is where the content of the page will be injected -->
            </main>
        </div>
    </div>

    <!-- ***** Footer Area Start ***** -->
    <footer>
        <div class="container">
            <div class="col-lg-12">
                <p>PRN222 - Online Clothing Shop - Group 2</p>
            </div>
        </div>
    </footer>
    <!-- ***** Footer Area End ***** -->

    <!-- Scripts -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/isotope.min.js"></script>
    <script src="~/js/owl-carousel.js"></script>
    <script src="~/js/counter.js"></script>
    <script src="~/js/header.js"></script>

    <!-- Custom JS to hide preloader after content is loaded -->
    <script>
        window.onload = function () {
            document.getElementById("js-preloader").style.display = "none";
            setActiveLink(); // Set the active link based on the current URL
        };

        // Function to highlight the active link based on the current URL
        function setActiveLink() {
            var currentPage = window.location.pathname;
            var links = document.querySelectorAll('.nav a');

            links.forEach(function(link) {
                // Remove the "active" class from all links
                link.classList.remove('active');

                // Check if the link's href matches the current page's pathname
                if (currentPage.includes(link.getAttribute('href'))) {
                    link.classList.add('active'); // Add "active" class to the current link
                }
            });
        }
        $(document).ready(function () {
            $("form[asp-action='SignUp']").removeData("validator").find("input, select, textarea").removeClass("valid").removeClass("error");
        });

    </script>

</body>
</html>