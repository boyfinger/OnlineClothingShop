@model ProductViewModel

@if (Model.TotalPages > 1)
{
    <div class="pagination mt-4 justify-content-center">
        <nav>
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="@Url.Action(ViewData["ActionName"].ToString(), new {
                               query = Model.SearchQuery, minPrice = ViewData["MinPrice"],
                               maxPrice = ViewData["MaxPrice"],
                               categoryId = ViewData["CategoryId"],
                               status = ViewData["Status"],
                               sortOrder = ViewData["SortOrder"],
                               page = Model.CurrentPage - 1 })">
                            ← Trước
                        </a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action(ViewData["ActionName"].ToString(), new {
                               query = Model.SearchQuery,
                               minPrice = ViewData["MinPrice"],
                               maxPrice = ViewData["MaxPrice"],
                               categoryId = ViewData["CategoryId"],
                               status = ViewData["Status"],
                               sortOrder = ViewData["SortOrder"],
                               page = i })">
                            @i
                        </a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="@Url.Action(ViewData["ActionName"].ToString(), new {
                               query = Model.SearchQuery,
                               minPrice = ViewData["MinPrice"],
                               maxPrice = ViewData["MaxPrice"],
                               categoryId = ViewData["CategoryId"],
                               status = ViewData["Status"],
                               sortOrder = ViewData["SortOrder"],
                               page = Model.CurrentPage + 1 })">
                            Tiếp →
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
