@model IEnumerable<OnlineClothing.Models.Order>

@{
    ViewData["Title"] = "Past Orders";
}

<h2>Past Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate?.ToString("yyyy-MM-dd")</td>
                <td>@order.StatusNavigation?.Name</td>
                <td>@string.Format("{0:N0} vn₫", order.TotalAmount)</td>
                <td>
                    <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
