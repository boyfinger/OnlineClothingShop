@model OnlineClothing.Models.AccountViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Sign Up</title>

    <!-- Add your CSS files -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
</head>
<body>

    <div class="container" id="container">

        <!-- Sign-Up Form -->
        <div class="form-container sign-up-container">
            <form method="post" asp-action="SignUp">
                <h1>Create Account</h1>

                <!-- Validation Summary for Signup Form -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="text" asp-for="SignupModel.FullName" placeholder="Full Name" required />
                <input type="email" asp-for="SignupModel.Email" placeholder="Email" required />
                <input type="password" asp-for="SignupModel.Password" placeholder="Password" required />
                <input type="password" asp-for="SignupModel.ConfirmPassword" placeholder="Confirm Password" required />
                <input type="text" asp-for="SignupModel.PhoneNumber" placeholder="Phone Number" required />

                <select asp-for="SignupModel.Gender" required>
                    <option value="" disabled selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>

                <input type="date" asp-for="SignupModel.DateOfBirth" placeholder="Date of Birth" required />
                <input type="text" asp-for="SignupModel.Address" placeholder="Address" required />
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Sign-In Form -->
        <div class="form-container sign-in-container">
            <form method="post" asp-action="Login">
                <h1>Sign In</h1>

                <div asp-validation-summary="All" class="text-danger"></div>

                <select asp-for="LoginModel.UserType" required>
                    <option value="" disabled selected>Select your role</option>
                    <option value="customer">Customer</option>
                    <option value="seller">Seller</option>
                </select>

                <input type="email" asp-for="LoginModel.LoginEmail" placeholder="Email" required />
                <input type="password" asp-for="LoginModel.LoginPassword" placeholder="Password" required />

                <a href="#">Forgot your password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- Overlay to Toggle Between Sign-Up and Sign-In -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start your journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Include your JavaScript -->
    <script>
        $(document).ready(function () {
            // Disable client-side validation for the form
            $.validator.setDefaults({
                ignore: ":hidden"
            });
        });
    </script>
    <script src="~/js/login.js" asp-append-version="true"></script>

</body>
</html>
