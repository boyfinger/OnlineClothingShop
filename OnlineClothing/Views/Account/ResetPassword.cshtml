@model OnlineClothing.Models.ResetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>

    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
</head>
<body>

    <div class="container">
        <div class="form-container sign-in-container">
            <form method="post" asp-action="ResetPassword">
                <h1>Reset Password</h1>

                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="password" asp-for="NewPassword" placeholder="New Password" required />
                <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required />

                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    <script src="~/js/login.js" asp-append-version="true"></script>

</body>
</html>
