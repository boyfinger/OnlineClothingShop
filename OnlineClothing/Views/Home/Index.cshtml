@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel

<style>
    .img-fixed {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .container-spec {
        width: 80%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }
</style>

<div class="container-spec">
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./images/banner2.png" class="d-block w-100" style="height: 600px" alt="...">
            </div>
            <div class="carousel-item">
                <img src="./images/banner3.png" class="d-block w-100" style="height: 600px" alt="...">
            </div>
            <div class="carousel-item">
                <img src="./images/banner4.png" class="d-block w-100" style="height: 600px" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="text-center mt-5">
        <h1 class="display-4">Online Clothing Shop</h1>
        <p>Chất lượng hàng đầu – Phong cách đẳng cấp – Giá cả xứng đáng!</p>
    </div>
    <div class="mt-3">
        <img src="./images/bigsale.png" class="mt-5" />
        <div class="sale-products p-3">
            <div class="row row-cols-1 row-cols-lg-5 g-3">
                @foreach (var product in Model.saleProducts)
                {
                    <div class="col">
                        <div class="card h-100 d-flex flex-column">
                            <img src="@product.ThumbnailUrl" class="card-img-top img-fixed" alt="@product.Name">
                            <div class="card-body d-flex flex-column">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="card-title product-name"><strong>@product.Name</strong></a>
                                <p class="card-text flex-grow-1">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    @if (product.Discount != null)
                                    {
                                        <p class="card-text text-danger mb-0">@String.Format("{0:N0} VND", @product.Price - (product.Price * product.Discount / 100) ?? 0)</p>
                                    }
                                    @if (product.Discount != 0)
                                    {
                                        <p class="card-text">-@product.Discount%</p>
                                    }
                                </div>
                                @if (product.Discount != 0)
                                {
                                    <p class="card-text mb-2" style="text-decoration: line-through">@String.Format("{0:N0} VND", @product.Price ?? 0)</p>
                                }
                                else
                                {
                                    <p class="card-text mb-2">&nbsp;</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a href="@Url.Action("Index", "Product")" class="btn btn-dark">Xem tất cả</a>
            </div>
        </div>
    </div>
    <hr />

    <div class="mt-5">
        <img src="./images/oustanding.png" class="mt-5" />
        <div class="sale-products p-3">
            <div class="row row-cols-1 row-cols-md-5 g-3">
                @foreach (var product in Model.hotProducts)
                {
                    <div class="col">
                        <div class="card h-100 d-flex flex-column">
                            <img src="@product.ThumbnailUrl" class="card-img-top img-fixed" alt="@product.Name">
                            <div class="card-body d-flex flex-column">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="card-title product-name"><strong>@product.Name</strong></a>
                                <p class="card-text flex-grow-1">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    @if (product.Discount != null)
                                    {
                                        <p class="card-text text-danger mb-0">@String.Format("{0:N0} VND", @product.Price - (product.Price * product.Discount / 100) ?? 0)</p>
                                    }
                                    @if (product.Discount != 0)
                                    {
                                        <p class="card-text">-@product.Discount%</p>
                                    }
                                </div>
                                @if (product.Discount != 0)
                                {
                                    <p class="card-text mb-2" style="text-decoration: line-through">@String.Format("{0:N0} VND", @product.Price ?? 0)</p>
                                }
                                else
                                {
                                    <p class="card-text mb-2">&nbsp;</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a href="@Url.Action("Index", "Product")" class="btn btn-dark">Xem tất cả</a>
            </div>
        </div>
    </div>
    <hr />
</div>
<div class="banner-left">
    <img src="./images/skyscraper.png" alt="Left Banner">
</div>

<div class="banner-right">
    <img src="./images/skyscraper.png" alt="Right Banner">
</div>
